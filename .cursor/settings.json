{
  "projectName": "Kaede",
  "description": "Next.js + Django + Supabase モノレポプロジェクト",
  "aiAssistant": {
    "language": "ja",
    "framework": "nextjs-django",
    "codeStyle": {
      "python": {
        "formatter": "black",
        "linter": "flake8",
        "importSorter": "isort",
        "typeHints": "required"
      },
      "typescript": {
        "strict": true,
        "eslint": true,
        "prettier": true
      }
    }
  },
  "fileAssociations": {
    "*.py": "python",
    "*.tsx": "typescript",
    "*.ts": "typescript",
    "*.jsx": "javascript",
    "*.js": "javascript",
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "*.md": "markdown"
  },
  "searchPaths": ["backend/", "frontend/src/", "docs/"],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/.next/**",
    "**/migrations/**",
    "**/staticfiles/**"
  ]
}
